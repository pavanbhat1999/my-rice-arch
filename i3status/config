wireless wlp3s0 {
        format_up = "<span color='#b48ead'> Ó§í %essid </span>"
        format_down = "<span color='#b48ead'> Ó§ë Disconnected </span>"
}

volume master {
        format = "<span color='#ebcb8b'> Ó§ï %volume </span>"
        format_muted = "<span color='#ebcb8b'> Ó§î Muted </span>"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

battery 0 {
	last_full_capacity = true
        format = "<span color='#a3be8c'> %status %percentage %remaining %emptytime </span>"
        format_down = "No Battery"
        status_chr = "‚ö°Charging"
        status_bat = "üîã BAT"
        status_unk = "? Unknown"
        status_full = "‚òª FULL"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}

tztime local {
		format = "<span color='#81a1c1'> %time </span>"
		format_time = "Ó§ß %a %-d %b %H:%M"
}


